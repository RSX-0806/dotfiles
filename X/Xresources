! URxvt appearance
URxvt.font: xft:JetBrains Mono:style=Regular:antialias=true:pixelsize=14
URxvt.iso14755_52: false
URxvt.iso14755: false
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.depth: 24
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 4
URxvt.cursorBlink: true
URxvt.urgentOnBell: true

! Restore CTRL+SHIFT+(c|v)
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! perl-ext-common
URxvt.perl-ext-common: default,resize-font

! Disable previous bindings
!URxvt.keysym.Control-Meta-C: builtin-string:
!URxvt.keysym.Control-Meta-V: builtin-string:

! resize-font
URxvt.keysym.C-j: resize-font:smaller
URxvt.keysym.C-k: resize-font:bigger
URxvt.keysym.C-equal: resize-font:reset
URxvt.resize-font.step: 2

! Keyboard-select
!URxvt.keysym.C-r: perl:keyboard-select:activate
!URxvt.keysym.C-s: perl:keyboard-select:search
!URxvt.keyboard-select.clipboard: true

! clipboard
!URxvt.keysym.M-c: perl:clipboard:copy
!URxvt.keysym.M-v: perl:clipboard:paste

